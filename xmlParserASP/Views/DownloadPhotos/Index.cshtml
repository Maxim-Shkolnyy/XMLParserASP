    <br />
    <button type="submit" class="btn btn-success">Download from Xl</button>
}
</p>

@section scripts {
    <script>
        $(document).ready(function () {
            $('input[name="renamePhotos"]').on('change', function () {
                var selectedValue = $(this).val();
                if (selectedValue === "true") {
                    $('#renameBlock').show();
                } else {
                    $('#renameBlock').hide();
                }
            });
        });
    </script>
}
