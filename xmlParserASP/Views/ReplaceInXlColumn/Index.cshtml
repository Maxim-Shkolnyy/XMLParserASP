<h1>Replace strings</h1>


<form asp-controller="ReplaceInXlColumn" asp-action="ProcessExcel" method="post" enctype="multipart/form-data">
    <label for="searchedSheetNumber">Sheet number__</label>
    <input type="number" id="searchedSheetNumber" name="searchedSheetNumber" min="1" value="1" maxlength="2"> <br /><br />
    
    <label for="searchedColumnNumber">Column number </label>
    <input type="number" id="searchedColumnNumber" name="searchedColumn" min="0" value="0" maxlength="2">
    <label for="searchedColumnNumber">(0 - all columns).  </label>

    <label for="excelFileWhereReplace">Choose processed file</label>
    <input type="file" id="excelFileWhereReplace" name="excelFileWhereReplace" required>
    
    <br /><br />
    ___________________________________________________________________________________
    <br /><br />
    
    
    <label for="replacementSheetNumber">Sheet number______________</label>
    <input type="number" id="replacementSheetNumber" name="replacementSheetNumber" min="1" value="1" maxlength="2"> <br /><br />

    <label for="oldReplacementColumn">Old values column number</label>
    <input type="number" id="oldReplacementColumn" name="oldReplacementColumn" min="1" value="1" maxlength="2">
    <label for="oldReplacementColumn"></label>
    
    <label for="newReplacementColumn">New values column number</label>
    <input type="number" id="newReplacementColumn" name="newReplacementColumn" min="1" value="2" maxlength="2">
    <label for="newReplacementColumn"></label>
    <br /><br />

    <label for="excelFileReplacementMask">Choose replacement mask file</label>
    <input type="file" id="excelFileReplacementMask" name="excelFileReplacementMask" required>
    <button type="submit">Process file</button>

</form>


